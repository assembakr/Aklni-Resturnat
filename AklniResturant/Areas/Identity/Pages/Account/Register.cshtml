@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="register-section d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <img src="~/assets/images/logo.jpg" alt="Aklni Logo" style="width: 250px;" class="mb-2">
            <h2 class="fw-bold text-gradient">Join Aklni 🍽️</h2>
            <p class="text-muted small">Create your account and start your flavor journey.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-theme w-100 rounded-pill py-2 mb-3">
                Register
            </button>

            <div class="text-center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="small text-gradient text-decoration-none d-block mb-1">Already have an account? Log in</a>
            </div>
        </form>

        @* External login section *@
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-4 text-center">
                <p class="text-muted small">Or register using:</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-theme-outline rounded-pill px-3 mx-1" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Ingredient
@{
    ViewData["Title"] = "Delete Igredient";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0 rounded-4">
        <h2 class="text-danger mb-3 text-center">Delete Ingredient</h2>
        <hr />

        <div class="mb-4">
            <h5 class="fw-bold">Are you sure you want to delete this ingredient?</h5>
            <p class="fs-5">
                <strong>Name:</strong> @Model.Name
            </p>
        </div>

        @if (Model.ProdIngredients != null && Model.ProdIngredients.Any())
        {
            <div class="mb-3">
                <h6 class="text-muted">This ingredient is used in the following products:</h6>
                <ul class="list-group list-group-flush">
                    @foreach (var pi in Model.ProdIngredients)
                    {
                        <li class="list-group-item">@pi.Product.Name</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <p class="text-muted">This ingredient is not used in any products.</p>
        }

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="IngredientId" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>

                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>


@model Ingredient
@{
    ViewData["Title"] = "Edit Ingredient";
}

<section class="edit-ingredient-section py-5" style="background: linear-gradient(120deg, #fff8f0, #ffe9d6); min-height: 100vh;">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-gradient">Edit Ingredient</h2>
            <p class="text-muted">Modify ingredient details and save your changes.</p>
        </div>

        <form asp-action="Edit" method="post" class="card shadow-lg border-0 mx-auto p-4 p-md-5 rounded-4" style="max-width: 600px; background-color: #fff;">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="IngredientId" class="form-label fw-semibold text-theme"></label>
                <input asp-for="IngredientId" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-semibold text-theme"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter ingredient name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @if (Model.ProdIngredients != null && Model.ProdIngredients.Any())
            {
                <div class="mt-4">
                    <h5 class="fw-bold text-gradient mb-3">Used In Products:</h5>
                    <ul class="list-group rounded-3 shadow-sm">
                        @foreach (var pi in Model.ProdIngredients)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @pi.Product?.Name
                                <span class="badge bg-warning text-dark">In Use</span>
                            </li>
                        }
                    </ul>
                </div>
            }

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-theme-outline px-4">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-theme px-4">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

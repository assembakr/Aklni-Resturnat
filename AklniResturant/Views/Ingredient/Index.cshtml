@model IEnumerable<Ingredient>
@{
    ViewData["Title"] = "Resturnat Ingredients";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-gradient">Ingredients</h2>
            <a asp-action="Create" class="btn btn-theme rounded-pill px-4 py-2">
                <i class="bi bi-plus-circle me-2"></i> Add Ingredient
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                No ingredients available yet. Click “Add Ingredient” to create one.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card shadow-sm border-0 rounded-4 h-100">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="bi bi-basket2 text-theme" style="font-size: 2rem;"></i>
                                </div>
                                <h5 class="fw-bold mb-2">@item.Name</h5>

                                <div class="d-flex justify-content-center gap-2 mt-3 flex-wrap">
                                    <a asp-action="Details" asp-route-id="@item.IngredientId"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        <i class="bi bi-eye me-1"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.IngredientId"
                                       class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IngredientId"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>




@model Ingredient
@{
    ViewData["Title"] = "Add New Ingredient";
}
<section class="py-5 bg-light">
    <div class="container">
        <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="fw-bold text-center text-gradient mb-4">Add New Ingredient</h2>

                <form asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold text-theme"></label>
                        <input asp-for="Name" class="form-control rounded-pill shadow-sm" placeholder="Enter ingredient name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-theme rounded-pill px-4">
                            <i class="bi bi-plus-circle me-1"></i> Add Ingredient
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


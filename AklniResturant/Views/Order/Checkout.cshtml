@model List<OrderItem>

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h2 class="mb-4">Checkout</h2>

    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@((item.Quantity* item.UnitPrice).ToString("C"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Grand Total:</th>
                <th>
                    @Model.Sum(i => i.Quantity * i.UnitPrice).ToString("C")
                </th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="ConfirmCheckout" method="post">
        <button type="submit" class="btn btn-success btn-lg">Confirm Order</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to Cart</a>
    </form>
</div>

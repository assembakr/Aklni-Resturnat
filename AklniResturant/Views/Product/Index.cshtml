@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<section class="products-section py-5" style="background: linear-gradient(120deg, #fff8f0, #ffe9d6); min-height: 100vh;">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="fw-bold text-gradient">Our Products</h2>

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-theme px-4">
                    <i class="bi bi-plus-circle me-1"></i> Add New Product
                </a>
            }
        </div>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden h-100 product-card" 
                         style="transition: all 0.3s ease;">
                        <div class="card-img-top position-relative" style="overflow: hidden;">
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.Name" 
                                 class="img-fluid w-100" 
                                 style="height:220px; object-fit:cover; transition: transform 0.4s ease;">
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="fw-bold text-theme mb-2">@item.Name</h5>
                            <p class="text-muted small flex-grow-1">@item.Description</p>
                            <p class="fw-semibold mb-3">
                                <span class="text-gradient">Price:</span> @item.Price.ToString("C")
                            </p>

                            <form asp-action="AddToCart" method="post" class="mt-auto">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <div class="input-group">
                                    <input type="number" name="quantity" class="form-control" 
                                           value="1" min="1" max="@item.Stock" />
                                    <button type="submit" class="btn btn-theme">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                </div>
                            </form>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex justify-content-between mt-3">
                                    <a asp-action="Details" asp-route-id="@item.ProductId" 
                                       class="btn btn-theme-outline btn-sm px-3">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" 
                                       class="btn btn-theme-secondary btn-sm px-3">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" 
                                       class="btn btn-outline-danger btn-sm px-3">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <script>
        // Smooth hover animation for cards
        document.querySelectorAll('.product-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                const img = card.querySelector('img');
                img.style.transform = 'scale(1.08)';
                card.style.transform = 'translateY(-6px)';
                card.style.boxShadow = '0 6px 20px rgba(0,0,0,0.15)';
            });
            card.addEventListener('mouseleave', () => {
                const img = card.querySelector('img');
                img.style.transform = 'scale(1)';
                card.style.transform = 'translateY(0)';
                card.style.boxShadow = '0 2px 8px rgba(0,0,0,0.08)';
            });
        });
    </script>
}

@model Product
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-danger text-white rounded-top-4 text-center">
            <h3 class="fw-bold">Confirm Deletion</h3>
        </div>

        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="@Model.ImageUrl" alt="@Model.Name"
                     class="img-fluid rounded shadow-sm"
                     style="max-height: 200px; object-fit: cover;" />
            </div>

            <h4 class="text-center text-danger fw-semibold">Are you sure you want to delete this product?</h4>

            <div class="mt-3">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Category:</strong> @Model.Category?.Name</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Description:</strong> @Model.Description</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductId" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger text-white px-4 rounded-3">
                        <i class="bi bi-trash3"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


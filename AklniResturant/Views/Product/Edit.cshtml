@model ProductEditVM
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-warning text-white rounded-top-4">
            <h3 class="mb-0 text-center fw-bold">Edit Product (@Model.Product.Name)</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Product.ProductId" />

                <!-- Product Image -->
                <div class="text-center mb-4">
                    <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name"
                         class="img-fluid rounded shadow-sm"
                         style="max-height: 200px; object-fit: cover;" />
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-semibold">Change Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Product.Name" class="form-label fw-semibold"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Product.Price" class="form-label fw-semibold"></label>
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="Product.Stock" class="form-label fw-semibold"></label>
                        <input asp-for="Product.Stock" class="form-control" />
                        <span asp-validation-for="Product.Stock" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Product.CategoryId" class="form-label fw-semibold">Category</label>
                        <select asp-for="Product.CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Product.Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <label class="form-label fw-semibold">Ingredients</label>
                    <select asp-for="SelectedIngredientIds"
                            asp-items="@(new MultiSelectList(Model.Ingredients, "IngredientId", "Name", Model.SelectedIngredientIds))"
                            multiple
                            class="form-select">
                    </select>
                    <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple ingredients.</small>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-warning text-white px-4 rounded-3">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@model List<OrderItem>
@{
    ViewData["Title"] = "Clear";
}

<section class="py-5" style="background: linear-gradient(120deg, #fff8f0, #ffe9d6); min-height:100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
                    <h3 class="fw-bold text-gradient mb-4">Clear Your Cart</h3>

                    <p class="lead mb-4">
                        Are you sure you want to remove <strong>all</strong> items from your cart?
                    </p>

                    <ul class="list-group mb-4">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.Product?.Name
                                <span class="badge bg-warning text-dark">@item.Quantity × @item.UnitPrice.ToString("C")</span>
                            </li>
                        }
                    </ul>

                    <form asp-action="ClearConfirmed" method="post">
                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Clear All
                            </button>
                            <a asp-action="Index" class="btn btn-theme-outline px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
